<div class="contents__header">
  <%= render partial: 'layouts/activity_watcher/courses/header' %>
</div>

<div class="contents__main">
  <div class="contents__wrap">
    <p id="notice"><%= notice %></p>
    <div>
      <h1><%= @course.title %></h1>  
    </div>

    <div class="contents__course-summary">
      <div class="contents__course-summary__contents-wrap-participant">
        <div class="contents__course-summary__icon">
          <i class="fa fa-user" aria-hidden="true"></i>
        </div>
        <div class="contents__course-summary__info">
          <span>Participants</span>
          <p>30</p>
        </div>
      </div>

      <div class="contents__course-summary__contents-wrap-task">
        <div class="contents__course-summary__icon">
          <i class="fa fa-tasks" aria-hidden="true"></i>
        </div>
        <div class="contents__course-summary__info">
          <span>Tasks</span>
          <p>100</p>
        </div>
      </div>

      <div class="contents__course-summary__contents-wrap-team">
        <div class="contents__course-summary__icon">
          <i class="fa fa-users" aria-hidden="true"></i>
        </div>
        <div class="contents__course-summary__info">
          <span>Teams</span>
          <p>7</p>
        </div>
      </div>
    </div>

  <!-- overall -->
    <div>
      <h2><i class="fa fa-list-alt" aria-hidden="true"></i>&nbsp;&nbsp;Overview</h2>
    </div>

    <table class="table table-bordered table-word-break table-striped contents__start-end-date">
      <tr>
        <th>受講開始日</th>
        <td><%= l @course.start_date, format: :medium %></td>
      </tr>
      <tr>
        <th>受講終了日</th>
        <td><%= l @course.end_date, format: :medium %></td>
      </tr>
    </table>
    <div class="contents__action">
      <%= link_to edit_course_path(@course) do %>
        <button type="button" class="btn btn-primary">コースを編集する</button>
      <% end %>
      <%= link_to _course_tasks_path(@course) do %>
        <button type="button" class="btn btn-primary">課題一覧をみる</button>
      <% end %>
  
      <%= link_to new__course_task_path(@course) do %>
        <button type="button" class="btn btn-primary">課題を追加する</button>
      <% end %>
  
      <%= link_to @course, method: :delete, data: { confirm: 'コースに紐付く課題も削除されますが、よろしいですか？' } do %>
        <button type="button" class="btn btn-danger">コースを削除する</button>
      <% end %>
    </div>

    <div class="contents__box26">
        <span class="contents__box-title">コース詳細</span>
        <p><%= @course.description %></p>
    </div>
  <!-- end of overall -->

  <!-- Participants -->
    <div>
      <h2><i class="fa fa-user" aria-hidden="true"></i>&nbsp;&nbsp;Participants</h2>
    </div>

    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>学籍番号</th>
                <th>氏名</th>
                <th>Githubユーザー名</th>
                <th>所属チーム</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">a15z7kn</th>
                <td>新妻健介</td>
                <td>niitsken</td>
                <td>中鉢PBL</td>
              </tr>
              <tr>
                <th scope="row">a15z7kn</th>
                <td>新妻健介</td>
                <td>niitsken</td>
                <td>中鉢PBL</td>
              </tr>
              <tr>
                <th scope="row">a15z7kn</th>
                <td>新妻健介</td>
                <td>niitsken</td>
                <td>中鉢PBL</td>
              </tr>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  <!-- end of Participants -->

  <!-- Tasks -->
    <div>
      <h2><i class="fa fa-tasks" aria-hidden="true"></i>&nbsp;&nbsp;Tasks</h2>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading ui-draggable-handle">
          <h3 class="panel-title">このコースの課題</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>課題名</th>
              <th>受付開始日時</th>
              <th>受付終了日時</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Ruby On Railsでブログをつくる</td>
              <td>2017/12/29</td>
              <td>2018/1/31</td>
            </tr>
            <tr>
              <td>2</td>
              <td>データベースを作成する</td>
              <td>2018/1/5</td>
              <td>2018/1/20</td>
            </tr>
          </tbody>
        </table>                                
      </div>
    </div>
  <!-- end of Tasks -->

    <%= link_to 'コース一覧に戻る', courses_path, class: "btn btn-default" %>
  </div>
</div>
