<div class="sidebar" id="js-sidebar">
  <div class="sidebar__wrap">
<!-- sidebar menu -->
    <div class="sidebar__menu-wrap">
      <div>
        <ul>
          <li class="sidebar__items">
            <%= link_to activity_watcher_path do %>
              <div class="sidebar__item"><i class="fa fa-home" aria-hidden="true"></i><span class="sidebar__action">ホーム</span></div>
            <% end %>
          </li>
          <% if current_user.Teacher? %>
            <li class="sidebar__items">
              <%= link_to courses_path do %>
                <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">コース登録</span></div>
              <% end %>
            </li>
            <li class="sidebar__items">
              <%= link_to new_course_path do %>
                <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">コースを作成する</span></div>
              <% end %>
            </li>
            <li class="sidebar__items">
              <%#= link_to edit_course_path(@course) do %>
                <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">コースを編集する</span></div>
              <%# end %>
            </li>
            <li class="sidebar__items">
              <%= link_to @course, method: :delete, data: { confirm: 'コースに紐付く課題も削除されますが、よろしいですか？' } do %>
                <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">コースを削除する</span></div>
              <% end %>
            </li>
          <% end %>
          <li class="sidebar__items">
            <%= link_to list_courses_url do %>
              <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">コースを見る</span></div>
            <% end %>
          </li>
            <li class="sidebar__items">
              <%#= link_to new__course_task_path do %>
                <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">課題を追加する</span></div>
              <%# end %>
            </li>
             <li class="sidebar__items">
              <%#= link_to _course_tasks_path(params[:course_id]) do %>
                <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">課題一覧をみる</span></div>
              <%# end %>
            </li>           
            <li class="sidebar__items">
              <%#= link_to edit__course_task_path(@task.course_id, @task.id) do %>
                 <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">課題を編集する</span></div>
              <%# end %>
            </li> 
            
            <li class="sidebar__items">
              <%= link_to new__course_task_path(@task.course_id, @task.id) do %>
                 <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">チームを作る</span></div>
              <% end %>
            </li>   

            <li class="sidebar__items">
              <%#= link_to edit__course_task_path(@task.course_id, @task.id) do %>
                 <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">チームを表示する</span></div>
              <%# end %>
            </li>   
            
            <li class="sidebar__items">
              <%#= link_to _course_task_team_path(params[:course_id], params[:task_id], @team) do%>
                 <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">チーム情報を表示する</span></div>
              <%# end %>
            </li>     

            <li class="sidebar__items">
              <%#= link_to edit__course_task_team_url(params[:course_id], params[:task_id], @team) do%>
                 <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">チーム情報を編集する</span></div>
              <%# end %>
            </li>     
            
            <li class="sidebar__items">
            <%#= link_to _course_task_team_url(params[:course_id], params[:task_id], @team), method: :delete, 
                data: { confirm: "所属メンバーや提出物に関する情報も削除されますが、本当に実行しますか？"} do %>
              <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">チーム情報を削除する</span></div>
              <%# end %>
            </li>       
          
          <li class="sidebar__items">
            <%= link_to users_logout_path do %>
              <div class="sidebar__item"><i class="fa fa-files-o" aria-hidden="true"></i><span class="sidebar__action">ログアウト</span></div>
            <% end %>
          </li>          
        </ul>
      </div>
    </div>
<!-- /sidebar__menu -->
<!-- sidebar__form -->
    <div class="sidebar__form-wrap">
      <%= render 'layouts/common/sidebar_form' %>
    </div>
<!-- /sidebar__form -->
  </div>
</div>
<!-- /sidebar -->