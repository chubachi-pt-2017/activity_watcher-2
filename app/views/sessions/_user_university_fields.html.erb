<div class="nested-fields" style="margin-top: 40px;">
  <div class="form-group">
    <%= f.label :university_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.collection_select :university_id, University.all, :id, :name, {}, { class: 'form-control' } %>
      <% if @user.user_universities.first.errors.full_messages_for(:university_id).any? %>
        <div class="field_with_errors">
          <% @user.user_universities.first.errors.full_messages_for(:university_id).each do |msg| %>
              <ul>
                <li><span style="color: red;"><%= msg %></span></li>
              </ul>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :email, class: 'form-control'%>
      <% if @user.user_universities.first.errors.full_messages_for(:email).any? %>
        <div class="field_with_errors">
          <% @user.user_universities.first.errors.full_messages_for(:email).each do |msg| %>
              <ul>
                <li><span style="color: red;"><%= msg %></span></li>
              </ul>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :student_no, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :student_no, class: 'form-control'%>
      <% if @user.user_universities.first.errors.full_messages_for(:student_no).any? %>
        <div class="field_with_errors">
          <% @user.user_universities.first.errors.full_messages_for(:student_no).each do |msg| %>
              <ul>
                <li><span style="color: red;"><%= msg %></span></li>
              </ul>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>